{
	"name": "home-orchestrator",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"deploy": "vue-cli-service build && firebase deploy"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"firebase": "^5.8.2",
		"register-service-worker": "^1.5.2",
		"vue": "^2.5.22",
		"vue-color": "^2.7.0",
		"vue-color-picker-wheel": "^0.4.3",
		"vue-router": "^3.0.1",
		"vuetify": "^1.5.0",
		"vuex": "^3.0.1",
		"vuex-persist": "^2.0.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.4.0",
		"@vue/cli-plugin-eslint": "^3.4.0",
		"@vue/cli-plugin-pwa": "^3.4.0",
		"@vue/cli-service": "^3.4.0",
		"@vue/eslint-config-airbnb": "^4.0.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.13.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.1.0",
		"vue-template-compiler": "^2.5.21"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"@vue/airbnb"
		],
		"rules": {
			"indent": [
				1,
				"tab"
			],
			"no-tabs": 0,
			"max-len": [
				1,
				160
			],
			"comma-dangle": [
				2,
				"never"
			]
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	}
}
